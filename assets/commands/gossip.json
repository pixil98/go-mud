{
    "version": 1,
    "id": "gossip",
    "spec": {
        "handler": "message",
        "config": {
            "recipient_channel": "world",
            "recipient_message": "{{ .Actor.Name }} gossips, \"{{ .Args.text }}\""
        },
        "params": [
            {"name": "text", "type": "string", "required": true, "rest": true}
        ]
    }
}
