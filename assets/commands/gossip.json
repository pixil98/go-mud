{
    "version": 1,
    "id": "gossip",
    "spec": {
        "handler": "message",
        "category": "communication",
        "description": "Broadcast a message to all online players.",
        "config": {
            "scope": "world",
            "sender_message": "{{ .Color.Yellow }}You gossip, \"{{ .Inputs.text }}\"{{ .Color.Reset }}",
            "recipient_message": "{{ .Color.Yellow }}{{ .Actor.Name }} gossips, \"{{ .Inputs.text }}\"{{ .Color.Reset }}"
        },
        "inputs": [
            {"name": "text", "type": "string", "required": true, "rest": true, "missing": "Gossip what?"}
        ]
    }
}
