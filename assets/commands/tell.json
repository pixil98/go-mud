{
    "version": 1,
    "id": "tell",
    "spec": {
        "handler": "message",
        "config": {
            "target": {
                "$resolve": "player",
                "$scope": "world",
                "$input": "target"
            },
            "recipient_channel": "player-{{ .Config.target.Name | lower }}",
            "recipient_message": "{{ .Actor.Name }} tells you, \"{{ .Inputs.text }}\"",
            "sender_channel": "player-{{ .Actor.Name | lower }}",
            "sender_message": "You tell {{ .Config.target.Name }}, \"{{ .Inputs.text }}\""
        },
        "inputs": [
            {"name": "target", "type": "string", "required": true},
            {"name": "text", "type": "string", "required": true, "rest": true}
        ]
    }
}
