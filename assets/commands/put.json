{
    "version": 1,
    "id": "put",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Put an item into a container.",
        "config": {
            "destination": "destination",
            "self_message": "You put {{ .Targets.item.Obj.Name }} in {{ .Targets.destination.Name }}.",
            "room_message": "{{ .Actor.Name }} puts {{ .Targets.item.Obj.Name }} in {{ .Targets.destination.Name }}."
        },
        "targets": [
            {"name": "item", "type": ["object"], "scope": ["inventory"], "input": "item", "not_found": "You aren't carrying anything called '{{ .Inputs.item }}'."},
            {"name": "destination", "type": ["object"], "scope": ["room","inventory","equipment"], "input": "container", "not_found": "You don't see '{{ .Inputs.container }}' here."}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true, "missing": "Put what where?"},
            {"name": "container", "type": "string", "required": true, "missing": "Put it where?"}
        ]
    }
}
