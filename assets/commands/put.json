{
    "version": 1,
    "id": "put",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Put an item into a container.",
        "config": {
            "destination": "destination",
            "message": "{{ .Actor.Name }} puts {{ .Targets.item.Obj.Name }} in {{ .Targets.destination.Name }}."
        },
        "targets": [
            {"name": "item", "type": ["object"], "scope": ["inventory"], "input": "item"},
            {"name": "destination", "type": ["object"], "scope": ["room","inventory","equipment"], "input": "container"}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true},
            {"name": "container", "type": "string", "required": true}
        ]
    }
}
