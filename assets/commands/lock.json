{
    "version": 1,
    "id": "lock",
    "spec": {
        "handler": "closure",
        "category": "interaction",
        "description": "Lock a door or container.",
        "config": {
            "action": "lock",
            "target": "{{ .Inputs.target }}"
        },
        "inputs": [
            {"name": "target", "type": "string", "required": true, "missing": "Lock what?"}
        ]
    }
}
