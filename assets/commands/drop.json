{
    "version": 1,
    "id": "drop",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Drop an item from your inventory.",
        "priority": 5,
        "config": {
            "destination": "room",
            "self_message": "You drop {{ .Targets.item.Obj.Name }}.",
            "room_message": "{{ .Actor.Name }} drops {{ .Targets.item.Obj.Name }}."
        },
        "targets": [
            {"name": "item", "type": ["object"], "scope": ["inventory"], "input": "item", "not_found": "You aren't carrying anything called '{{ .Inputs.item }}'."}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true, "missing": "Drop what?"}
        ]
    }
}
