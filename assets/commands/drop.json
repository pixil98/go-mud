{
    "version": 1,
    "id": "drop",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Drop an item from your inventory.",
        "config": {
            "destination": "room",
            "message": "{{ .Actor.Name }} drops {{ .Targets.item.Obj.Name }}."
        },
        "targets": [
            {"name": "item", "type": "object", "scope": ["inventory"], "input": "item"}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true}
        ]
    }
}
