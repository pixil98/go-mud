{
    "version": 1,
    "id": "shout",
    "spec": {
        "handler": "message",
        "category": "communication",
        "description": "Shout something to everyone in the zone.",
        "config": {
            "scope": "zone",
            "sender_message": "{{ .Color.Yellow }}You shout, \"{{ .Inputs.text }}\"{{ .Color.Reset }}",
            "recipient_message": "{{ .Color.Yellow }}{{ .Actor.Name }} shouts, \"{{ .Inputs.text }}\"{{ .Color.Reset }}"
        },
        "inputs": [
            {"name": "text", "type": "string", "required": true, "rest": true, "missing": "Shout what?"}
        ]
    }
}
