{
    "version": 1,
    "id": "give",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Give an item to another player or mobile.",
        "config": {
            "destination": "destination",
            "message": "{{ .Actor.Name }} gives {{ .Targets.item.Obj.Name }} to {{ .Targets.destination.Name }}.",
            "no_self_target": "destination"
        },
        "targets": [
            {"name": "item", "type": ["object"], "scope": ["inventory"], "input": "item"},
            {"name": "destination", "type": ["player", "mobile"], "scope": ["room"], "input": "recipient"}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true},
            {"name": "recipient", "type": "string", "required": true}
        ]
    }
}
