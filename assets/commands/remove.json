{
    "version": 1,
    "id": "remove",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Remove a worn item back to your inventory.",
        "config": {
            "destination": "inventory",
            "message": "{{ .Actor.Name }} removes {{ .Targets.item.Obj.Name }}."
        },
        "targets": [
            {"name": "item", "type": ["object"], "scope": ["equipment"], "input": "item", "not_found": "You aren't wearing anything called '{{ .Inputs.item }}'."}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true, "missing": "Remove what?"}
        ]
    }
}
