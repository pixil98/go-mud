{
    "version": 1,
    "id": "say",
    "spec": {
        "handler": "message",
        "config": {
            "recipient_channel": "zone-{{ .State.ZoneId }}-room-{{ .State.RoomId }}",
            "recipient_message": "{{ .Actor.Name }} says, \"{{ .Args.text }}\""
        },
        "params": [
            {"name": "text", "type": "string", "required": true, "rest": true}
        ]
    }
}
