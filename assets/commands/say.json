{
    "version": 1,
    "id": "say",
    "spec": {
        "handler": "message",
        "category": "communication",
        "description": "Say something to everyone in the room.",
        "config": {
            "recipient_channel": "zone-{{ .Session.ZoneId }}-room-{{ .Session.RoomId }}",
            "recipient_message": "{{ .Actor.Name }} says, \"{{ .Inputs.text }}\""
        },
        "inputs": [
            {"name": "text", "type": "string", "required": true, "rest": true, "missing": "Say what?"}
        ]
    }
}
