{
    "version": 1,
    "id": "get",
    "spec": {
        "handler": "get",
        "category": "items",
        "description": "Pick up an item from the room or a container.",
        "targets": [
            {"name": "container", "type": "object", "scope": ["room"], "input": "from", "optional": true},
            {"name": "target", "type": "object", "scope": ["room", "contents"], "input": "item", "scope_target": "container"}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true},
            {"name": "from", "type": "string", "required": false}
        ]
    }
}
