{
    "version": 1,
    "id": "get",
    "spec": {
        "handler": "move_obj",
        "category": "items",
        "description": "Pick up an item from the room or a container.",
        "priority": 5,
        "config": {
            "destination": "inventory",
            "message": "{{ if .Targets.destination }}{{ .Actor.Name }} gets {{ .Targets.item.Obj.Name }} from {{ .Targets.destination.Name }}.{{ else }}{{ .Actor.Name }} picks up {{ .Targets.item.Obj.Name }}.{{ end }}"
        },
        "targets": [
            {"name": "destination", "type": ["object"], "scope": ["room"], "input": "from", "optional": true},
            {"name": "item", "type": ["object"], "scope": ["room", "contents"], "input": "item", "scope_target": "destination", "not_found": "You don't see '{{ .Inputs.item }}' here."}
        ],
        "inputs": [
            {"name": "item", "type": "string", "required": true, "missing": "Get what?"},
            {"name": "from", "type": "string", "required": false}
        ]
    }
}
